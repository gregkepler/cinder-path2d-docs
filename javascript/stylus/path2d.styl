cinder-red = #a41c12

body
	padding: 0
	margin: 0
	font-size: 14px;

a 
	color: cinder-red
	font-family: 'Open Sans', sans-serif
	text-decoration: none
	
	&:hover
		text-decoration: underline

iframe
	margin: 20px 0
	border: 0

.path2d

	width: 800px
	margin: 0 auto


	ul#sketchLinks

		list-style: none
		padding: 0
		background: #232323
		height: auto
		margin: 0
		text-indent: 0

		li
			display: inline-block
			padding: 0 12px
			margin: 0
		
			&:before
				content: none

		a
			color: #e7e7e7
			font-family: 'Open Sans', sans-serif
			text-decoration: none
			padding: 10px 0

			&:hover
				color: #ffffff

			&.active
				border-bottom: .4em solid cinder-red



	.canvases
		position: relative

		.left
			position: absolute;
			left: 10px
			bottom: 10px

		.right
			position: absolute;
			right: 10px
			bottom: 10px

	pre[class*="language-"]
		margin: 0

	canvas
		
		width: 100%
		height: 340px
		outline: #f5f2f0 solid 1px


	.active
		display: block
			
	.invisible, .inactive
		
		display: none


	button
		
		padding: 1em


	#tutorial
		// margin-top: 3em
		// max-width: 640px
		// margin: 20px auto

		button
			background: none
			border: 1px solid cinder-red
			color: cinder-red
			text-transform: uppercase
			font-family: 'Open Sans', sans-serif
			font-size: .75em
			padding: .75em 1.5em
			margin: 0
			cursor: pointer

			&:hover
				background: cinder-red
				color: #fff
			
			&:focus
				outline: none
				
		.dg.main
			position: absolute
			top: 0;
			right: 10px;

	.codeModule
		position: relative
		// font-size: .75em
		line-height: 1.5em
		
		a#copy-button
			position: absolute
			top: 5px
			right: 10px

