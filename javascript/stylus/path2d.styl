cinder-orange = #c64b24

body
	font-size: 16px
	font-family: 'Merriweather', serif;

p, ul, a
	font-size: .9em
	line-height: 1.8em

a
	color: cinder-orange

.content

	max-width: 680px
	margin: 0 auto


ul#sketchLinks

	list-style: none
	padding: 0
	background: #232323
	height: 100%
	margin: 0

	li
		display: inline-block
		padding: 0 12px

	a
		color: #e7e7e7
		font-family: 'Open Sans', sans-serif
		text-decoration: none
		padding: 10px 0

		&:hover
			color: #ffffff

		&.active
			border-bottom: .4em solid #c64b24



.canvases
	position: relative

	.left
		position: absolute;
		left: 10px
		bottom: 10px

	.right
		position: absolute;
		right: 10px
		bottom: 10px

pre[class*="language-"]
	margin: 0

canvas
	
	width: 100%
	height: 340px
	outline: #f5f2f0 solid 1px



.active
	display: block
		
.invisible, .inactive
	
	display: none


button
	
	padding: 1em

h1
	font-family: 'Open Sans', sans-serif
	color: #333333
	font-size: 2.25em

#tutorial
	margin-top: 3em

	button
		background: none
		border: 1px solid #c64b24
		color: #c64b24
		text-transform: uppercase
		font-family: 'Open Sans', sans-serif
		padding: .75em 1.5em

		&:hover
			background: #c64b24
			color: #fff
			
	.dg.main
		position: absolute
		top: 0;
		right: 10px;

pre.language-cpp
	background: #f4f4f2

	.function
		color: #c64b24

	.number
		color: #c62469


#bottomNav
	margin: 20px 0
	text-align: center
	
.sketch
	line-height: 0


